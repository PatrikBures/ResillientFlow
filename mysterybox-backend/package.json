{
  "name": "logistics-temporal-backend",
  "version": "1.0.0",
  "description": "Temporal worker and API for the logistics simulator",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc",
    "start:worker": "ts-node src/worker.ts",
    "start:server": "ts-node src/server.ts",
    "dev:worker": "nodemon --watch src --exec ts-node src/worker.ts",
    "dev:server": "nodemon --watch src --exec ts-node src/server.ts"
  },
  "dependencies": {
    "@temporalio/activity": "^1.13.1",
    "@temporalio/client": "^1.13.1",
    "@temporalio/worker": "^1.13.1",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "iconv-lite": "^0.6.3"
  },
  "devDependencies": {
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/node": "^18.11.18",
    "nodemon": "^2.0.20",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.4"
  }
}
